{
    "name": "fredbradley/laravel-rule-nhs-number",
    "description": "A Laravel 5/6 Validator Rule for checking the validity of a NHS Number",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fred Bradley",
            "email": "code@fredbradley.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "FredBradley\\NhsNumber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FredBradley\\NhsNumber\\Tests\\": "tests"
        }
    },
    "require": {
        "imliam/php-nhs-number": "^1.1",
        "php": "^7.2",
        "illuminate/support": "^5.5||^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.12"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "psalm": "vendor/bin/psalm --show-info=true",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "FredBradley\\NhsNumber\\ServiceProvider"
            ]
        }
    }
}
